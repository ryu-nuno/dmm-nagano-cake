<main>
  <div class="container">
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <% @item.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <h2>商品新規登録</h2>
    <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>
            商品画像
          </th>
          <td>
            <%= f.attachment_field :image %>
          </td>
        </tr>
        <tr>
          <th>
            商品名
          </th>
          <td>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <th>
            商品説明
          </th>
          <td>
            <%= f.text_area :introduction %>
          </td>
        </tr>
        <tr>
          <th>
            ジャンル
          </th>
          <td>
            <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}) %>
          </td>
        </tr>
        <tr>
          <th>
            税抜価格
          </th>
          <td>
            <%= f.text_field :price %>円
          </td>
        </tr>
        <tr>
          <th>
            販売ステータス
          </th>
          <td>
            -
          </td>
        </tr>
      </table>
      <%= f.submit '新規登録', class:"btn btn-success" %>
    <%end%>
  </div>
</main>