<div class="container my-5">

  <h2>商品一覧</h2>

  <div class="text-right index-new">
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-success btn-success btn-circle btn-lg">＋</button>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr class="active"> <!-- active => 色をグレーに変更 -->
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item) do %><%= item.name %><% end %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>

</div>
