<main>
  <div class="container">
    <h3>商品一覧</h3>
    <a href="/admin/items/new">
      <i class="fas fa-plus fa-2x"></i>
    </a>
    <table class="table">
      <tr>
        <td>
          商品ID
        </td>
        <td>
          商品名
        </td>
        <td>
          税抜価格
        </td>
        <td>
          ジャンル
        </td>
        <td>
          ステータス
        </td>
      </tr>
      <%@items.each do |item|%>
      <tr>
        <td>
          <%=item.id%>
        </td>
        <td>
          <%=link_to admin_item_path(item.id) do %><%=item.name%><%end%>
        </td>
        <td>
          <%=item.price%>
        </td>
        <td>
          <%=item.genre.name%>
        </td>
        <td>
          -
        </td>
      </tr>
      <%end%>
    </table>
    <%= paginate @items %>
  </div>
</main>