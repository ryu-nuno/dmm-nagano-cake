<div class="container takasa">

  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2><br>

  <table class="table">
	  <tr>
      <th>顧客ID</th>
      <td><%= @customer.id %>
      <% if @customer.is_deleted == "有効" %>
        <div class="label label-primary">有効会員</div>
      <% else %>
        <div class="label label-danger">退会済み</div>
      <% end %>
      </td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
    <%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-primary" %>
    <%= link_to "注文履歴一覧", admin_orders_path(@customer.id), class:"btn btn-primary" %>
</div>