<main>
  <div class="container">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <% @customer.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <h3>
      <%=@customer.first_name%><%=@customer.last_name%>さんの会員情報編集
    </h3>
    <%=form_with model:@customer,url: admin_customer_path, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>
            会員ID
          </th>
          <td>
            <%=@customer.id%>
          </td>
        </tr>
        <tr>
          <th>
            氏名
          </th>
          <td>
            <%= f.text_field :first_name %><%= f.text_field :last_name %>
          </td>
        </tr>
        <tr>
          <th>
            フリガナ
          </th>
          <td>
            <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
          </td>
        </tr>
        <tr>
          <th>
            郵便番号
          </th>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>
        <tr>
          <th>
            住所
          </th>
          <td>
            <%= f.text_field :address %>
          </td>
        </tr>
        <tr>
          <th>
            電話番号
          </th>
          <td>
            <%= f.text_field :telephone_number %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <td>
            <%= f.text_field :email %>
          </td>
        </tr>
        <tr>
          <th>
            会員ステータス
          </th>
          <td>
            -
          </td>
        </tr>
      </table>
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    <%end%>
  </div>
</main>