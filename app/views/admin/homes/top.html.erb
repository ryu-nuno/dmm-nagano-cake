<main>
  <div class="container">
    <h3>注文履歴一覧</h3>
    <table class="table">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>

      <%@orders.each do |order| %>
        <tr>
          <td>
            <%=link_to admin_order_path(order.id) do %>
              <%= order.created_at %>
            <%end%>
          </td>
          <td>
            <%= order.customer.first_name%><%= order.customer.last_name%>
          </td>
          <td>
            <%= order.order_details.count %>
          </td>
          <td>-</td>
        </tr>
      <%end%>
    </table>
    <%= paginate @orders %>
  </div>
</main>