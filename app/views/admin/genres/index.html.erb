<main>
  <div class="container">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <% @genre.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <h3>ジャンル一覧・追加</h3>
    <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <%end%>
    <table class="table">
      <tr>
        <th>ジャンル</th>
      </tr>
      <%@genres.each do |genre|%>
      <tr>
        <td>
          <%=genre.name%>
          <%= link_to '編集する',edit_admin_genre_path(genre.id), class: "btn btn-success"%>
        </td>
      </tr>
      <%end%>
    </table>
  </div>
</main>