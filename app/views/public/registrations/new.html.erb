<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>新規会員登録</h2>
        <%= form_with model:@customer,url:customers_path,local:true do |f|%>
          <%= render "devise/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tbody>
  　　　         <tr>
                <th scope="col">名前</th>
                <td>
                  <div class="field">
                    <%= f.label :（姓） %>
                  　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                　</div>
                </td>
                <td>
                  <div class="field">
                    <%= f.label :（名） %>
                  　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                　</div>
                </td>
              </tr>
              <tr>
                <th scope="col">フリガナ</th>
                <td>
                  <div class="field">
                    <%= f.label :（セイ） %>
                  　<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                　</div>
                </td>
                <td>
                  <div class="field">
                    <%= f.label :（メイ） %>
              　   　<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana_name" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">メールアドレス</th>
                <td>
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">郵便番号(ハイフンなし)</th>
                <td>
                  <div class="field">
              　　    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">住所</th>
                <td>
                  <div class="field">
                    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">電話番号(ハイフンなし)</th>
                <td>
                  <div class="field">
                    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">パスワード(<%= @minimum_password_length %> 文字以上)</th>
                <td>
                  <div class="field">
                    <% if @minimum_password_length %>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">パスワード(確認用)</th>
                <td>
                  <div class="field">
              　　    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  </div>
                </td>
              </tr>
    　　　       <tr>
                <th></th>
                <th>
                  <div class="actions">
                    <%= f.submit "新規登録", class:"btn btn-success" %>
                  </div>
                </th>
              </tr>
            </tbody>
          </table>
        <% end %>
        <h3>既に登録済みの方</h3>
        <%=link_to 'こちら', customers_sign_in_path %><p>からログインしてください。</p>
      </div>
    </div>
  </div>
</main>
