<main>
  <div class="container">
    <h2>商品一覧</h2>
    <div class="row">
      <% @items.each do |item|%>
        <div class="col-3 mt-5">
          <%=link_to item_path(item.id) do%>
            <%= attachment_image_tag item, :image, size: "250x150" %>
            <%= item.name%>
            ￥<%= item.price.to_s(:delimited)%>
          <%end%>
        </div>
      <%end%>
    </div>
    <%= paginate @items %>
  </div>
</main>