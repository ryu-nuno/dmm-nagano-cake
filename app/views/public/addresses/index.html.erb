<main>
  <div class="container">
    <% if @address.errors.any? %>
      <%= @address.errors.count %>件のエラーが発生しました
      <% @address.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <h3>配送先登録/一覧</h3>
    <%= form_with model:@address,url: addresses_path, local:true do |f| %>
      <h6>郵便番号(ハイフンなし)</h6>
    　<%= f.text_field :postal_code %>
    　<h6>住所</h6>
    　<%= f.text_field :address%>
    　<h6>宛名</h6>
    　<%= f.text_field :name%>
      <%= f.submit '新規登録',class:"btn btn-success"%>
    <% end %>
    <table class="table table-bordered">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      <%@addresses. each do |address| %>
        <tr>
          <td>
            <%= address.postal_code%>
          </td>
          <td>
            <%= address.address%>
          </td>
          <td>
            <%= address.name%>
          </td>
          <td>
            <%= link_to '編集する',edit_address_path(address.id),class: "btn btn-success"%>
            <%= link_to '削除する',address_path(address.id),method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
</main>