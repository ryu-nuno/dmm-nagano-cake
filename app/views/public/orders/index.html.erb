<main>
  <h3>注文履歴一覧</h3>
  <table class="table">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
<!--ordersとorder_detailsはアソシエーションで関連付けされているのでeachでネストできる-->
    <%@orders.each do |order|%>
      <tr>
        <td>
          <%= order.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
          <%= order.address%>
        </td>
        <td>

          <%order.order_details.each do |order_detail|%>
            <li>
              <%= order_detail.item.name%>
            </li>
          <%end%>
        </td>
        <td>
          <%= order.total_payment.to_s(:delimited) %>
        </td>
        <td>-</td>
        <td>
          <%= link_to '表示する', order_path(order),class: "btn btn-outline-primary" %>
        </td>
      </tr>
    <%end%>
  </table>
</main>